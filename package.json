{
  "name": "mediaplus-broadcast-player-nuxt3-demo",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "firebaseBuild": "NITRO_PRESET=firebase && NITRO_FIREBASE_GEN=2 && nuxt build",
    "firebaseDeploy": "NITRO_PRESET=firebase && NITRO_FIREBASE_GEN=2 && nuxt build && npx firebase deploy",
    "onlyDeploy": "npx firebase deploy",
    "onlyHostingDeploy":     "yarn run generate && firebase deploy --only hosting:mediaplus-ugc-platform-nuxt3-demo --project ncplayer-for-sgr"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxthq/ui": "^2.7.0",
    "@types/node": "^18.17.3",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^6.3.2",
    "firebase-functions-test": "^3.1.0",
    "nuxt": "^3.8.0"
  },
  "dependencies": {
    "@emanuele-em/nuxt-swipe": "^1.0.2",
    "axios": "^1.4.0",
    "dayjs": "^1.11.9",
    "firebase": "^10.5.0",
    "hls.js": "^1.4.12",
    "lscache": "^1.3.2",
    "nuxt-swiper": "^1.2.2",
    "postcss-custom-properties": "^13.3.0",
    "pretty-bytes": "^6.1.1",
    "tailwindcss-safe-area": "^0.4.0",
    "ua-parser-js": "^1.0.35",
    "uuid": "^9.0.0"
  }
}
